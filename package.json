{
  "name": "filterql",
  "version": "3.0.1",
  "type": "module",
  "description": "A tiny query language for filtering structured data",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamhl8/filterql"
  },
  "homepage": "https://github.com/adamhl8/filterql",
  "bugs": {
    "url": "https://github.com/adamhl8/filterql/issues"
  },
  "author": {
    "email": "adamhl@pm.me",
    "name": "Adam Langbert",
    "url": "https://github.com/adamhl8"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist/"],
  "keywords": ["filterql", "typescript", "query", "language", "data", "filter", "filtering"],
  "scripts": {
    "bundle": "rm -rf ./dist && bun lint && tsc -p tsconfig.build.json && tsc-alias",
    "knip": "knip-bun",
    "lint": "markdown-toc -i --bullets '-' --maxdepth 3 ./README.md && tsc --noEmit && biome check --write && bun knip && bun test",
    "prepare": "find .githooks -type f -exec ln -srf {} .git/hooks/ \\; || true",
    "prepublishOnly": "bun bundle"
  },
  "devDependencies": {
    "@adamhl8/configs": "^0.11.1",
    "@biomejs/biome": "^2.2.2",
    "@types/bun": "^1.2.21",
    "@types/node": "^24.3.0",
    "knip": "^5.63.0",
    "markdown-toc": "^1.2.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
